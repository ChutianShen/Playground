<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/list_messages_friendPicture"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="30dip"
        app:riv_border_width="2dip"
        app:riv_border_color="#333333"
        app:riv_oval="true"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/list_messages_friendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:layout_toRightOf="@+id/list_messages_friendPicture"
        android:layout_toEndOf="@+id/list_messages_friendPicture"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/list_messages_userPicture"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:riv_corner_radius="30dip"
        app:riv_border_width="2dip"
        app:riv_border_color="#333333"
        app:riv_oval="true"
        android:src="@mipmap/ic_launcher"

        />

    <TextView
        android:id="@+id/list_messages_UserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi!"
        android:layout_toLeftOf="@+id/list_messages_userPicture"
        android:layout_toStartOf="@+id/list_messages_userPicture"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        />

</RelativeLayout>